<video id="background-video" autoplay loop muted>
             <source src="https://thumbs.gfycat.com/RemoteImpishBlackbear-mobile.mp4" type="video/mp4">
</video>

<h2 class ="mt-5" style="font-family: 'Space Age', sans-serif;">My scores</h2>

<div class = "container">
  <div class = "row">
    <ul class="mt-5">
      <table class = "table">
        <thead>
          <tr style="color: white">
            <th>Level</th>
            <th>Points</th>
            <th>Max Points</th>
          </tr>
        </thead>
        <tbody>
          <% @scores.each_with_index do |score, i| %>
            <tr style="color: white">
              <td>Level <%= i + 1 %></td>
              <td><%= score.point %></td>
              <td><%= score.game.questions.count * 10 %></td>
            </tr>
          <% end %>
          <tr style="color: white">
            <th>Total</th>
            <th><%= @user.total_score %></th>
            <th><%= @final_score %></th>
          </tr>
        </tbody>
      </table>
    </ul>
  </div>
</div>
